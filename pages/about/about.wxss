/* pages/about/about.wxss */
.header {
	width: 100%;
	height: 400rpx;
	padding: 30rpx 0;
	/* background-color: rgb(219, 138, 138); */
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
}
.header .logo {
	width: 100%;
	/* height: 200rpx; */
	/* background-color: #efefef; */
	text-align: center;
}
.logo .img {
	width: 100rpx;
	height: 100rpx;
}
.header .text {
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 24rpx;
}
.text .name {
	font-weight: 600;
	font-size: 34rpx;
}
.text .slogan {
	color: #ab111e;
	line-height: 50rpx;
}
.text .location {
	color: #666
}

/* container */
.container {
	height: 600rpx;
	width: 100%;
	background-color: #fff;
	/* background-color: #efefef; */
}
